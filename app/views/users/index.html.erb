<%= render "devise/shared/header" %>

<% @users.each do |user| %>
  <li class='list'>
    <%= link_to user_path(user.id), method: :get do %>
      <div class='user-img-content'>
        <%= image_tag user.image, class: "user-img" %>
      </div>
      <div class='user-info'>
        <h3 class='user-name'>
          <%= user.nickname %>
        </h3>
        <div class='user-platform'>
          <%= user.platform.name %>
        </div>
        <div class='user-favorite'>
          <%= user.favorite.name %>
        </div>
      </div>
    <% end %>
  </li>
<% end %>
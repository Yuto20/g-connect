<div class="contents_row">
  <div class="container">
    <h2>プロフィール編集</h2>
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group"><br>
        <%= f.label :image, 'ユーザー画像' %><br/>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
      <%= f.label :nickname, 'ニックネーム' %><br>
      <%= f.text_field :nickname, autofocus: true, class: 'form-control' %>
      </div>

      <div class="pull-down">
        <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
      </div>

      <div class="pull-down">
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"user-sex"}) %>
      </div>

      <div class="pull-down">
        <%= f.collection_select(:voice_id, Voice.all, :id, :name, {}, {class:"select-box", id:"user-voice"}) %>
      </div>

      <div class="form-group">
      <%= f.label :profile, '自己紹介（255文字未満）' %><br>
      <%= f.text_area :profile, :size => "80x5",  class: 'form-control'  %>
      </div>

      <div class="al-c">
      <%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div> 
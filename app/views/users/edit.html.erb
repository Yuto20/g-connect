<div class="edit-contents_row">
  <div class="edit-container">
    <div class="edit-titles">
    <div class="edit-title">プロフィール編集</div>
    </div>
    <%= form_with(model: @user, local: true) do |f| %>

    <%= render 'devise/shared/error_messages', model: f.object %>
  
  <div class="edit-form-contents">
      <div class="img-upload">
      <div class="weight-bold-text">
        ユーザー画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <span class="form-info">
          クリックしてファイルをアップロード
        </span>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

      <div class="form-group">
      <div class='form-text-wrap'>
        <label for="nickname", class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) game次郎", maxlength:"10" %>
    </div>

      <div class="form-group">
      <div class='form-text-wrap'>
        <label for="user-age", class="form-text">年齢</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
    </div>

      <div class="form-group">
      <div class='form-text-wrap'>
        <label for="user-sex", class="form-text">性別</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"user-sex"}) %>
    </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="user-voice", class="form-text">ボイスチャット</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:voice_id, Voice.all, :id, :name, {}, {class:"select-box", id:"user-voice"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="user-platform", class="form-text">使用プラットフォーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:platform_id, Platform.all, :id, :name, {}, {class:"select-box", id:"user-platform"}) %>
      </div>

      <div id="form-group-favorite" class="form-group-favorite">
        <div id="favorite_box">
        <label class="item_input__body__label" id="size_box">
        プレイするゲーム
          <span class="required">必須</span>
        </label>
        </div>
        <div class="pulldown" id="favorite_selectbox">
          <%= f.collection_select(:favorite_id, Favorite.all, :id, :name, {}, {class:"favorite_box"}) %>
        </div>
      </div>

      <div class="form-group">
      <div class='form-text-wrap'>
        <label for="profile" class="form-text">プロフィール文</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :profile, class:"input-default", id:"profile", placeholder:"他のユーザーにひとこと！" %>
    </div>

      <div class="al-c">
      <%= f.submit 'プロフィール編集を完了する', class: 'chat-btn' %>
      </div>
    <% end %>
  </div>
  </div>
</div> 
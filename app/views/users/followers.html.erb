<%= render "devise/shared/header" %>
<div class="follow-title">FOLLOWERS</div>
<div class="follow-container marketing">
      <table class="follow-table text-center">
        <tbody class="follow-user-body">
          <% @users.each do |user| %>
            <tr class="follow-user-info">
              <td>
                  <%= link_to user_path(user), class: "follow-user-iden" do %>
                    <%= image_tag user.image, class: "user-img" %>
                    <%= user.nickname %>
                  <% end %>
              </td>
              <td class="follow-user-platform">
                  <%= user.platform.name %>
              </td>
              <td class="follow-user-favorite">
                  <%= user.favorite.name %>
              </td>
              <td class="follow-user-status">
                <% if user != current_user %>
                  <% if user.is_followed_by?(current_user) %>
                    <%=link_to user_relationships_path(user), method: :delete do %>
                      <button type="button" class="btn btn btn-danger">フォロー解除</button>
                    <% end %>
                  <% else %>
                    <%=link_to user_relationships_path(user), method: :post do %>
                      <button type="button" class="btn btn btn-primary">フォロー</button>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="back-show">
        <%= link_to "戻る", user_path(@user.id), class: "back-show-btn" %>
      </div>
</div>